# Database (required)
DATABASE_URL=postgresql://undoable:undoable_dev@localhost:5432/undoable

# Server
PORT=7433
NODE_ENV=development
# HTTP request body limit for uploads (default: 32MB)
UNDOABLE_BODY_LIMIT_MB=32
# Max individual chat attachment size (default: 10MB)
UNDOABLE_ATTACHMENT_MAX_MB=10
# Max audio payload accepted by /chat/transcribe (default: 20MB)
UNDOABLE_STT_MAX_AUDIO_MB=20

# Economy mode (optional, off by default)
# UNDOABLE_ECONOMY_MODE=1
# UNDOABLE_ECONOMY_MAX_ITERATIONS=6
# UNDOABLE_ECONOMY_TOOL_RESULT_CHARS=8000
# UNDOABLE_ECONOMY_CONTEXT_MAX_TOKENS=64000
# UNDOABLE_ECONOMY_CONTEXT_THRESHOLD=0.55

# Spend guardrails (optional)
# Rolling 24h budget in USD. When exceeded, chat auto-pauses by default.
# UNDOABLE_DAILY_BUDGET_USD=5
# Set to 0 to disable auto-pause at budget limit (warn-only mode)
# UNDOABLE_DAILY_BUDGET_AUTO_PAUSE=1
# Keep promise mode on by default (0 = allow irreversible mutate/exec tools)
# UNDOABLE_ALLOW_IRREVERSIBLE_ACTIONS=0

# LLM Providers (at least one required)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
DEEPSEEK_API_KEY=
GROQ_API_KEY=

# Voice Services (optional)
ELEVENLABS_API_KEY=
DEEPGRAM_API_KEY=

# Channel Integrations (optional)
WHATSAPP_PHONE_ID=
WHATSAPP_TOKEN=
TELEGRAM_BOT_TOKEN=
DISCORD_BOT_TOKEN=
SLACK_BOT_TOKEN=
